<html>
    <head></head>
    <title>Back To School | User Registration</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Rubik&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <body>
        <div class="wrapper">
            <div class="header">
                <div class="cap-container">
                    <i class="fa fa-graduation-cap"></i>
                </div>
                <div class="text">Back To School Register</div>
            </div>
            <form action="/user/register" method="post" class="login-form">
                <h3>Register as a new user</h3>

                <% if(errors.email_or_phone != null) {%>
                    <small style="text-align:center;color:red;font-size: 15px;text-align: left;"><%= errors.email_or_phone %></small>
                <% } %>

                <% if(errors.full_name != null) {%>
                    <small style="text-align:center;color:red;font-size: 12px;text-align: left;"><%= errors.full_name.message %></small>
                <% } %>
                <div class="input-container">
                    <div class="left">
                        <i class="fa fa-user"></i>
                    </div>
                    <div class="right">
                        <input type="text" name="full_name" placeholder="Enter Your Full Name" value="<%= request.full_name != null ? request.full_name : '' %>">
                    </div>
                </div>

                <% if(errors.email_address != null) {%>
                    <small style="text-align:center;color:red;font-size: 12px;text-align: left;"><%= errors.email_address.message %></small>
                <% } %>

                <div class="input-container">
                    <div class="left">
                        <i class="fa fa-envelope"></i>
                    </div>
                    <div class="right">
                        <input type="text" name="email_address" placeholder="Enter Your Email Address" value="<%= request.email_address != null ? request.email_address : '' %>">
                    </div>
                </div>

                <% if(errors.phone_number != null) {%>
                    <small style="text-align:center;color:red;font-size: 12px;text-align: left;"><%= errors.phone_number.message %></small>
                <% } %>

                <div class="input-container">
                    <div class="left">
                        <i class="fa fa-phone"></i>
                    </div>
                    <div class="right">
                        <input type="text" name="phone_number" placeholder="Enter Your Phone Number" value="<%= request.phone_number != null ? request.phone_number : '' %>">
                    </div>
                </div>

                <% if(errors.password != null) {%>
                  <small style="text-align:center;color:red;font-size: 12px;text-align: left;"><%= errors.password.message %></small>
                  <% } %>
                <div class="input-container">
                    <div class="left">
                        <i class="fa fa-unlock-alt"></i>
                    </div>
                    <div class="right">
                        <input type="password" name="password" placeholder="Enter Your Password" value="">
                    </div>
                </div>

                <div class="btn-container">
                    <button name="button">Sign up</button>
                </div>
                <p>Already Registered? <a href="/user/login">Login Instead</a></p>
            </form>
        </div>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </body>
</html>
